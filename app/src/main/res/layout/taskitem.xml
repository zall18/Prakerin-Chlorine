<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_history"
        android:backgroundTint="@color/green"
        android:layout_margin="8dp"
        android:id="@+id/task_item"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:background="@drawable/rounded_right"
            android:backgroundTint="@color/green_history"
            android:gravity="center"
            android:id="@+id/task_layer"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[HI-01} Membuat CRUD"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/date_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 january 0000"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/status_task_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selesai"
                android:textColor="@color/green"
                android:textSize="16dp"
                android:layout_marginRight="12dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>