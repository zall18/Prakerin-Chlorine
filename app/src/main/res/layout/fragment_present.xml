<!--                </LinearLayout>-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/rounded_corner"
                    android:padding="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textSize="40dp"
                        android:id="@+id/clock"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="senin"
                        android:textSize="20dp"
                        android:id="@+id/day"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 june 2024"
                        android:textSize="20dp"
                        android:id="@+id/date"
                        android:textColor="@color/black"
                        />

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/circle_present"
                        android:backgroundTint="@color/main_blue"
                        >

                        <LinearLayout
                            android:id="@+id/kehadiran_button"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:background="@drawable/circle_present"
                            android:backgroundTint="@color/main_dark_blue"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Masuk"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="Ketentuan"
                        android:textSize="18dp"
                        android:layout_marginTop="20dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:text="Pastikan anda berada pada radius 500m dari tempat prakerin"

                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="40dp"
                    android:text="Jika anda tidak bisa masuk, silahkan klik tombol di bawah ini"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:textSize="12dp"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Isi formulir"
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="@color/main_dark_blue"
                    android:textColorHint="@color/white"
                    android:layout_marginHorizontal="40dp"
                    android:id="@+id/formulir_button"
                    />

            </LinearLayout>

        </ScrollView>
    </LinearLayout>


</FrameLayout>