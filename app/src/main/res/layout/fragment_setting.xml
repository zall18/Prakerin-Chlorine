<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/purple"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:background="@drawable/circle_image"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:layout_marginTop="60dp"
                >

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:shapeAppearanceOverlay="@style/circle_image"
                    android:id="@+id/image_siswa_pengaturan"
                    android:src="@drawable/gojo1"
                    android:scaleType="centerCrop"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rizal Satoru"
                android:textStyle="bold"
                android:textColor="@color/darkPurple"
                android:id="@+id/name_pengaturan"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nisn"
                android:textColor="@color/darkPurple"
                android:id="@+id/nisn_pengaturan"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/purple2"
                android:padding="12dp"
                android:layout_marginHorizontal="20dp"
                android:id="@+id/edit_profile"
                android:layout_marginTop="60dp"
                >
                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_icon"
                    android:backgroundTint="@color/white"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    >

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/baseline_person_24"
                        app:shapeAppearanceOverlay="@style/circle_image" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profil"
                    android:textColor="@color/white"
                    android:textSize="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"

                    >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/baseline_navigate_next_24"
                        android:layout_marginRight="20dp"
                        />



                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/purple2"
                android:padding="12dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="12dp"
                android:id="@+id/edit_akun"
                >
                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_icon"
                    android:backgroundTint="@color/white"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    >

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/baseline_lock_24"
                        app:shapeAppearanceOverlay="@style/circle_image" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Akun"
                    android:textColor="@color/white"
                    android:textSize="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"

                    >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/baseline_navigate_next_24"
                        android:layout_marginRight="20dp"
                        />



                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="@color/purple2"
                android:padding="12dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="12dp"
                android:id="@+id/mode_absensi"
                >
                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_icon"
                    android:backgroundTint="@color/white"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    >

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/baseline_co_present_24"
                        app:shapeAppearanceOverlay="@style/circle_image" />

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mode absensi"
                    android:textColor="@color/white"
                    android:textSize="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"

                    >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/baseline_navigate_next_24"
                        android:layout_marginRight="20dp"
                        />



                </LinearLayout>

            </LinearLayout>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:visibility="gone"
                android:id="@+id/mode_group"
                >
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lokasi"
                    android:id="@+id/lokasi"

                    />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Token"
                    android:id="@+id/token"

                    />
            </RadioGroup>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>