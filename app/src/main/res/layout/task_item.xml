<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_history"
        android:backgroundTint="@color/green"
        android:id="@+id/taskItem"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/rounded_right"
            android:backgroundTint="@color/green_history"
            android:layout_marginLeft="30dp"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:id="@+id/task_layer"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[Hl-01] Pencatatan Perselisihan"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:id="@+id/name_task"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 June 2024"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:id="@+id/date_task"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selesai"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:layout_marginEnd="20dp"
                android:id="@+id/status_task"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>